@import '_base'
@import '_cards'

.Board
  height: 100vh
  display: grid
  grid-template-columns: 30vw 1fr 30vw
  grid-template-rows: 20vh 1fr 55vh
  grid-template-areas: "hd hd hd" "score center rules" "score player rules"
  height: 100vh
  background: url('./img/bg.png') center top / cover
  color: #fff
  line-height: 1.4

.Center
  grid-area: center
  display: flex
  flex-flow: row wrap

.rules
  margin: 0 2em
  grid-area: rules
  font-size: 0.875em
  padding: 1em 2em
  background-color: rgba(#000, 0.05)
  border: 1px solid rgba(#000, 0.3)
  box-shadow: inset 0 5vh 15vh rgba(#000, 0.1), 0 1px 2px rgba(#fff, 0.3)
  border-radius: 1vh
  text-shadow: 0 1px 1px rgba(#000, 0.3)
  align-self: flex-start

.Scores
  display: flex
  flex-flow: column
  align-items: center
  justify-content: center
  padding: 1em 1em
  grid-area: score
  max-width: 20em

.Score
  width: 12vw
  height: calc( 12vw * 0.6)
  margin: 1vh
  padding: 1em 1em
  border-radius: 0.3em
  background: transparent url('./img/scoreBg.png') center / cover
  // border: 4px solid #A5784B
  color: #fff
  text-shadow: 0 4px 4px rgba(#000,0.25)
  text-align: center
  transition: all 0.3s ease-in-out
  box-shadow: 0 5px 25px rgba(#000, 0.25)
  .value,
  .title
    margin: 0
  .title
    margin-bottom: 1.5em
  &:not(.active)
    opacity: 0.7
    transform: translateX(-2vh)

.Players
  padding: 10px
  text-align: center
  grid-area: player

